<!DOCTYPE html>
<html lang="en">
    <%- include('../shared/head.ejs',{title:'Online Shop Admin | Orders'}) %> 
<body>
    <%- include('../shared/header.ejs') %> 
    <main>
        <div>
            <h2 class="heading2"> Orders</h2>
        </div>
        <ul>
            <% for(const order of orders) {%> 
            <li>
                <article>
                    <div id="top-section">
                        <h3><span>₹<%= order.productData.totalPrice.toFixed(2) %> </span> - <%= order.formattedDate %> </h3>
                        <p id="live-status"><%= order.status.toUpperCase() %></p>
                    </div>
                    <div id="order-details">
                        <div>
                            <% for(const item of order.productData.items) { %> 
                                <div><%= item.product.title %> - ₹<%= item.totalPrice.toFixed(2) %> (₹<%= item.product.price.toFixed(2) %> x <%= item.quantity %> )</div>
                            <% } %> 
                        </div>
                    </div>
                </article>
            </li>
            <% } %> 
        </ul>
    </main>
</body>
</html>
<style>
ul{
    list-style: none;
    padding: 0;
}
article{
    margin: 0.5rem auto;
    box-shadow: 1px 1px 2px rgb(160, 160, 160);
    max-width: 80%;
    background: #fff;
    border-radius: 0.5rem;
    padding: 0.7rem;
}
#top-section{
    justify-content: space-between;
    align-items: center;
    display: flex;
}
#top-section h3{
    margin: 0.5rem;
}
#top-section h3 span{
    color: #007239;
}
#top-section p {
    margin: 0.5rem;
    padding: 0.5rem 1rem;
    background-color: rgb(228, 171, 15);
    border-radius: 1rem;
    color: #fff;
}
article a {
    text-decoration: none;
}
#order-details{
    display: flex;
    justify-content: space-between;
    align-items: start;
}
#order-details p{
    margin: 0.5rem 0;
}
.orders-status select{
    border: none;
    padding: 0.4rem ;
    background-color: rgb(179, 179, 179);
    border-radius: 0.3rem;
    color: #fff;
    cursor: pointer;
    font-size: 1rem;
}
</style>