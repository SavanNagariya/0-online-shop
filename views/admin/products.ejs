<!DOCTYPE html>
<html lang="en">
    <%- include('../shared/head.ejs',{title:'Online Shop Admin | Products'}) %> 
<body>
    <%- include('../shared/header.ejs') %> 
    <main>
        <div>
            <h2 class="heading2">Administration</h2>
            <h3>Products Manage</h3>
            <a class="btn" href="/admin/products/new">Add Product</a>
        </div>
        <section class="product-section">
            <% for (product of products) { %> 
            <div id="product-item">
                <img src="/<%= product.filePath %>" alt="Product image">
                <div>
                    <div class="heading">
                        <h3><%= product.title %></h3>
                        <p>â‚¹ <%= product.price %> </p>
                    </div>
                    <div class="summary"><%= product.summary %></div>
                    <div class="text"><%= product.description %></div>
                </div>
                <div><a href="/admin/update-product/<%= product._id %>" class="btn">Update</a></div>
            </div>
           <% } %> 
        </section>            
    </main>
</body>
</html>
<style>
a {
    text-decoration: none;
}
#product-item .heading{
    padding: 5px 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
#product-item .summary{
    padding: 0;
}
#product-item .text{
    padding: 8px 0 0 0;
    font-size: 0.7rem;
}
</style>