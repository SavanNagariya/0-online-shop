<!DOCTYPE html>
<html lang="en">
    <%- include('shared/head.ejs',{title:'Online Shop | Signup'}) %> 
<body>
    <%- include('shared/header.ejs') %> 
    <main>
        <form id="signup-form" action="" method="POST">
            <% if(existingUser.errorMessage){ %> 
              <p id="errorMessage"><%= existingUser.errorMessage %></p>
            <% } %> 
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <h2>Signup</h2>
            <div id="form-item">
                <label for="email">Email</label>
                <input id="email" type="email" name="email" value="<%= existingUser.email %>" required>
            </div>
            <div id="form-item">
                <label for="confirm-email">Confirm Email</label>
                <input id="confirm-email" type="email" name="confirm-email" value="<%= existingUser.emailConfirm %>" required>
            </div>
            <div id="form-item">
                <label for="password">Password</label>
                <input id="password" type="password" name="password" value="<%= existingUser.password %>" required>
            </div>
            <hr>
            <div id="form-item">
                <label for="name">Full Name</label>
                <input id="name" type="text" name="name" value="<%= existingUser.name %>" required>
            </div>
            <div id="form-item">
                <label for="street">Street</label>
                <input id="street" type="text" name="street" value="<%= existingUser.street%>" required>
            </div>
            <div id="form-item">
                <label for="postalcode">Postal Code</label>
                <input id="postalcode" type="number" name="postalcode" value="<%= existingUser.postalcode %>" required>
            </div>
            <div id="form-item">
                <label for="city">City</label>
                <input id="city" type="text" name="city" value="<%= existingUser.city %>" required>
            </div>
            <div id="form-item">
                <button class="btn">Create Account</button>
            </div>
            <div id="form-item">
                You have account then click <a class="login-link" href="/login">Login</a>.
            </div>
        </form>
    </main>
</body>
</html>

<style>
.login-link{
    padding: 4px;
    margin: rem 0;
    text-decoration: none;
    color: white;
    background-color: #00ce67;
    border: none;
    border-radius: 5px;
    font-weight: 500;
    transition: 300ms;
}
#signup-form{
    margin: 6.5rem auto;
    max-width: 40%;
    color: black;
    background-color: white;
    padding:1rem 3rem ;
    border-radius: 1rem;
    box-shadow: 2px 2px 4px rgb(160, 160, 160);
}
#form-item{
    padding: 2%  0;
}
#form-item label{
    display: block;
    font-size: 17px;
}
#form-item input{
    margin-top: 0.4rem;
    width: 97%;
    height: 2.2rem;
    border-radius: 8px;
    font-size: 20px;
    padding: 1px 8px;
    border: none;
    background-color: rgb(230, 230, 230);
    transition:400ms;
}
#form-item input:focus{
    outline: none;
    box-shadow: 1px 1px 8px rgb(160, 160, 160);
    background-color: rgb(255, 255, 255); 
}
@media (max-width: 74rem) {
   #signup-form{
        max-width: 60%;
    }
}
@media (max-width: 53rem) {
    #signup-form{
         max-width: 90%;
     }
    
}
</style>