<header>
    <div>
        <div><a href="/">Online Shop</a></div>
        <div>
            <button id="menubar">|||</button>
        </div>
    </div>
    <nav class="nav-item">
        <ul>
            <% if (!locals.isAdmin) { %> 
                <li><a href="/">Products</a></li>
                <li><a href="/shopping-cart">Cart (<span class="cartItem"><%= locals.cart.totalQuantity %></span>)</a></li>
            <% if (locals.isAuth) { %> 
                <li><a href="/orders">My Orders</a></li>
            <% } }%> 
            <% if (locals.isAdmin) { %> 
                <li><a href="/admin/products">Products Manage</a></li>
                <li><a href="/admin/orders">Orders Manage</a></li>
            <% } %> 
            <% if (!locals.isAuth) { %> 
                <li><a href="/signup">Signup</a></li>
                <li><a href="/login">Login</a></li>
            <% } %> 
            <% if (locals.isAuth) { %> 
                <li>
                    <form action="/logout" method="POST">
                        <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                        <button class=".button">Logout</button>
                    </form>
                </li>
            <% } %> 
        </ul>
    </nav>    
</header>
<style>
    header div div button{
        display: none;
        cursor: pointer;
        border-radius: 1rem;
        border: none;
    }
    @media (max-width: 50rem) {
        header div div button{
            display: block;
        }
    }
</style>
